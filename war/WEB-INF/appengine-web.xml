<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
	<application>wordpong</application>
	<version>15</version>

	<!-- Configure java.util.logging -->
	<system-properties>
		<property name="java.util.logging.config.file" value="WEB-INF/logging.properties" />
	</system-properties>


	<static-files>
		<include path="favicon.ico" expiration="1d" />
		<include path="css/**" expiration="1d" />
		<include path="err/**" expiration="1d" />
		<include path="i/**" expiration="1d" />
		<include path="js/**" expiration="1d" />
		<include path="ktrwjr/**" expiration="1d" />
		<include path="static/**" expiration="1d" />
	</static-files>

	<resource-files>
		<exclude path="static/**" />
	</resource-files>

	<admin-console>
		<page name="Appstats" url="/stats" />
		<page name="WordPong Admin" url="/admin" />
	</admin-console>

	<inbound-services>
		<service>mail</service>
		<service>xmpp_message</service>
	</inbound-services>

	<!--
		Issue 1807: Sessions-enabled app doesn't work when datastore goes down
	-->
	<sessions-enabled>true</sessions-enabled>

	<static-error-handlers>
		<handler file="err/app_error.html" />
		<handler file="err/over_quota.html" error-code="over_quota" />
		<handler file="err/dos_api_denial.html" error-code="dos_api_denial" />
		<handler file="err/timeout.html" error-code="timeout" />
	</static-error-handlers>


</appengine-web-app>